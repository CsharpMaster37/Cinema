@using System.Web
@model IEnumerable<Cinema.Models.ReviewBlockList>

@{
    ViewData["Title"] = "Index";
}

<h1>Блок-лист</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                <a asp-controller="Block" asp-action="UnBlock" asp-route-id="@item.Id">@HttpUtility.HtmlDecode("&#10060;")</a>
            </td>
        </tr>
}
    </tbody>
</table>
