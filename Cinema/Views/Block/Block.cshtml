@model Cinema.Models.Review

@{
    ViewData["Title"] = "Block";
}

<h1>Удалить все отзывы пользователя и заблокировать?</h1>

<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DatePosted)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatePosted)
        </dd>
        <dt class="col-sm-2">
            Название фильма
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Film.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Text)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
    </dl>
    
    <form asp-action="Block">
        <input type="hidden" asp-for="UserId"/>
        <input type="hidden" asp-for="UserName"/>
        <input type="submit" value="Заблокировать" class="btn btn-danger" /> |
    </form>
    <a asp-controller="Review" asp-action="Reviews" asp-route-id="FilmId">Вернуться</a>
</div>
