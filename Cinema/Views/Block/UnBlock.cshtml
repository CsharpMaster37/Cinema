@model Cinema.Models.ReviewBlockList

@{
    ViewData["Title"] = "UnBlock";
}

<h1>Вы уверены, что хотите разблокировать пользователя?</h1>

<hr/>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>
    
    <form asp-action="UnBlock">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="UserName" />
        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="Date" />
        <input type="submit" value="Разблокировать" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться</a>
    </form>
</div>
